<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kit.personalalarm.MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:id="@+id/switch1" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_alignEnd="@+id/switch1"
        android:layout_marginTop="30dp"
        android:id="@+id/switch2" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch2"
        android:layout_alignEnd="@+id/switch2"
        android:layout_marginTop="30dp"
        android:id="@+id/switch3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/switch3"
        android:layout_alignTop="@id/switch3"
        android:text="Emergency Call"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:id="@+id/emgCt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/switch1"
        android:layout_alignTop="@id/switch1"
        android:text="LED"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:id="@+id/ledt"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ledt"
        android:src="@drawable/disconnected"
        android:id="@+id/icon"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/switch2"
        android:layout_alignTop="@id/switch2"
        android:text="Sound"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:id="@+id/soundt"/>
</RelativeLayout>
