<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kit.personalalarm.MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:id="@+id/led" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/led"
        android:layout_alignEnd="@+id/led"
        android:layout_marginTop="30dp"
        android:id="@+id/sound" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sound"
        android:layout_alignEnd="@+id/sound"
        android:layout_marginTop="30dp"
        android:id="@+id/call" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/call"
        android:layout_alignTop="@id/call"
        android:text="Emergency Call"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:id="@+id/emgCt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/led"
        android:layout_alignTop="@id/led"
        android:text="LED"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:id="@+id/ledt"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ledt"
        android:src="@drawable/disconnected"
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sound"
        android:layout_alignTop="@id/sound"
        android:text="Sound"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:id="@+id/soundt"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editcall"
        android:text="999"
        android:layout_below="@+id/emgCt"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:inputType="phone"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tel"
        android:text="Tel:"
        android:layout_below="@+id/emgCt"
        android:layout_toLeftOf="@id/editcall"
        android:textSize="10sp"
        android:inputType="phone"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/buttoncall"
        android:text="Edit"
        android:textSize="10sp"
        android:layout_below="@id/call"
        android:layout_toLeftOf="@id/call"/>
</RelativeLayout>
